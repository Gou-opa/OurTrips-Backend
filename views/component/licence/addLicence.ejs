<% include ../layout/head %>

<body class="hold-transition skin-purple fixed sidebar-mini" >
<div class="wrapper" >
    <!-- header -->
    <% include ../layout/header %>
    <!-- sidebar menu -->
    <% include ../layout/sidebar %>
    <!-- content -->


    <div class="content-wrapper">

        <section class="content-header">
            <h1>Quản lý xe</h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-car"></i> Quản lý giấy phép</a></li>
                <li class="active"><i class="fa fa-plus-square"></i>Thêm giấy phép</li>
            </ol>
            <hr>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-10 col-md-10">
                            <div class="box box-primary" align="center">
                                <div class="box-header with-border">
                                    <h3 class="box-title"><b>Thêm giấy phép mới</b></h3>
                                </div>
                                <form class="form-horizontal" action="/vehicle" method="post">
                                    <div class="box-body">

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 col-xs-2 control-label">Mã thẻ</label>

                                            <div class="col-sm-9 col-xs-8">
                                                <input type="text" class="form-control" name="id" id="inputEmail3" placeholder="Mã thẻ">
                                            </div>

                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 col-xs-2 control-label">Loại giấy phép</label>

                                            <div class="col-sm-9 col-xs-8">
                                                <input type="text" class="form-control" name="type" id="inputEmail3" placeholder="Loại giấy phép">
                                            </div>

                                        </div>
                                        <!-- Loại xe -->
                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 col-xs-2 control-label">Thời hạn thẻ</label>

                                            <div class="col-sm-9 col-xs-8">
                                                <input type="text" class="form-control" name="type" id="inputEmail3" placeholder="Thời hạn thẻ">
                                            </div>

                                        </div>

                                        <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-2 col-xs-2 control-label">Nơi cấp</label>

                                            <div class="col-sm-9 col-xs-8">
                                                <input type="text" class="form-control" name="authority" id="inputEmail3" placeholder="Nơi cấp">
                                            </div>

                                        </div>

                                    </div>
                                    <!-- /.box-body -->
                                    <div class="box-footer" align="center">
                                        <button type="submit" class="btn btn-primary bg-color">
                                            Thêm xe
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
    <%  include ../layout/footer %>
</div>
<% include ../layout/script %>
</body>
</html>