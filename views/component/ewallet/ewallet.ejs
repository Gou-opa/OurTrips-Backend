<% include ../layout/head %>

<body class="hold-transition skin-purple fixed sidebar-mini" onload="load_ewalet()">
<div class="wrapper" >
    <!-- header -->
    <% include ../layout/header %>
    <!-- sidebar menu -->
    <% include ../layout/sidebar %>
    <!-- content -->


    <div class="content-wrapper">

        <section class="content-header">
            <h1>Quản lí ví</h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-car"></i> Driver</a></li>
            </ol>
            <hr>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Quản lý ví ngân hàng</h3>
                                </div>
                                <div class="box-body ">
                                    <div align="center">
                                        <div class="box-header with-border">
                                            <h3 class="box-title"><b>Thêm một tài khoản mới</b></h3>
                                        </div>
                                        <form class="form-horizontal" action="/ewallet/link" method="post" id="ewallet_link_form">
                                            <div class="box-body">

                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-3 col-xs-3 control-label">Mã tài khoản</label>

                                                    <div class="col-sm-9 col-xs-9">
                                                        <input type="text" class="form-control" name="accountNumber" id="inputEmail3" placeholder="Mã thẻ">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-3 col-xs-3 control-label">Ngân hàng</label>

                                                    <div class="col-sm-9 col-xs-9">
                                                        <input type="text" class="form-control" name="vendor" id="inputEmail3" placeholder="Loại giấy phép">
                                                    </div>

                                                </div>
                                                <!-- Loại xe -->
                                            </div>
                                            <!-- /.box-body -->
                                            <div class="box-footer" align="center">
                                                <button type="submit" class="btn btn-primary bg-color" style="width: 10rem;">
                                                    Tạo
                                                </button>
                                            </div>
                                            <p id="message2" style="color: red; font-weight: bold"></p>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Quản lý ví của App</h3>
                                </div>
                                <div class="box-body ">
                                    <div align="center">
                                        <div class="box-header with-border">
                                            <h3 class="box-title"><b>Thêm một ví mới</b></h3>
                                            <br>
                                            <h5>Nhấn nút "Tạo" và một ví mới sẽ được tạo</h5>
                                            <button type="button" id = "createWallet" class="btn btn-primary bg-color" style="width: 10rem;">
                                                Tạo
                                            </button>
                                            <p id="message1" style="color: red; font-weight: bold"></p>
                                            <p id="message" style="color: red; font-weight: bold"></p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Quản lý ví của App</h3>
                                </div>
                                <div class="box-body ">
                                    <div style="padding: 10px;">
                                        <div class="box-header">
                                            <h3 class="box-title"><b>Các ví đã thêm</b></h3>
                                            <button id="reload" onclick="load_ewalet()" class="btn bg-primary bg-color pull-right"><i class="fa fa-refresh"></i></button>
                                        </div>
                                        <table class="table tale-hover table-bordered" id="show_ewallet">
                                            <thead>
                                            <th>STT</th>
                                            <th>Username</th>
                                            <th>Mã ví</th>
                                            <th>Nhà cung cấp</th>
                                            <th></th>

                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="box-footer table-responsive no-padding" align="center">


                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <div class="modal fade" id="modal-default1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Chi tiết tài khoản</h4>
                    </div>
                    <div class="modal-body">
                            <div class="box-body table-responsive">
                                <table class="table" id="table-show1">
                                    <tbody>
                                    <tr>
                                        <td width="30%">Mã tài khoản</td>
                                        <td width="1%">:</td>
                                        <td width="64%" id="accountNumber">123</td>
                                    </tr>
                                    <tr>
                                        <td>Ngân hàng</td>
                                        <td width="1%">:</td>
                                        <td id="bank">1</td>
                                    </tr>
                                    <tr>
                                        <td>Số dư</td>
                                        <td width="1%">:</td>
                                        <td id="money">2</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                    </div>
                    <div class="modal-footer">
                        <a href="/vehicle/edit-vehicle">
                            <button type="button" class="btn btn-primary bg-color" style="width: 15rem;">Sửa</button>
                        </a>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <div class="modal fade" id="modal-default2">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Chi tiết ví</h4>
                    </div>
                    <div class="modal-body">
                            <div class="box-body table-responsive">
                                <table class="table" id="table-show2">
                                    <tbody>
                                    <tr>
                                        <td width="15%">Username</td>
                                        <td width="1%">:</td>
                                        <td width="74%" id="username">Lamboghini</td>
                                    </tr>
                                    <tr>
                                        <td>Mã ví</td>
                                        <td width="1%">:</td>
                                        <td id="ewalletID">Lamboghini</td>
                                    </tr>
                                    <tr>
                                        <td>Số dư</td>
                                        <td width="1%">:</td>
                                        <td id="money">Lamboghini</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                    </div>
                    <div class="modal-footer">
                        <a href="/vehicle/edit-vehicle">
                            <button type="button" class="btn btn-primary bg-color" style="width: 15rem;">Sửa</button>
                        </a>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>

    <!-- /.content-wrapper -->
    <%  include ../layout/footer %>
</div>
<% include ../layout/script %>
<script src="/ajax/ewallet.js"></script>
</body>
</html>